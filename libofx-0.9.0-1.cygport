DESCRIPTION="Open Financial eXchange client"
HOMEPAGE="http://libofx.sourceforge.net/"
SRC_URI=mirror://sourceforge/${PN}/${P}.tar.gz

abi=4
PKG_NAMES="${PN} ${PN}${abi} ${PN}-devel"
PKG_HINTS="setup lib dev"
PKG_CONTENTS[0]="--exclude=html usr/bin/*.exe usr/share/"
PKG_CONTENTS[1]="usr/bin/cygofx-${abi}.dll"
PKG_CONTENTS[2]="usr/include/ usr/lib/ usr/share/doc/${P}/html/"

src_compile() {
	cd ${S}
	cygautoreconf
	cd ${B}
	cygconf
	cygmake all doc
}

DOCS="totest.txt"
